<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    tools:context=".orientation.AttentionDualTaskInstruction">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:text="@string/instructions"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/instructHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_centerHorizontal="true"
        android:text="walking_and_talking"
        android:textColor="@color/white"
        android:textSize="28sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dualTaskIns1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="30sp"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_centerHorizontal="true"
            android:text="@string/now_stand_up_repeat_the_same_substracting_task_while_walking_in_a_straight_line"
            android:textColor="@color/white"
            android:textSize="26sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dualTaskIns2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="30sp"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_centerHorizontal="true"
            android:text="@string/stop_once_you_hear_the_beep"
            android:textColor="@color/white"
            android:textSize="26sp"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGo"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="42sp"
        android:layout_marginBottom="56dp"
        android:onClick="startPage"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        app:cornerRadius="10dp"
        android:text="@string/go"
        android:textSize="26sp" />

</RelativeLayout>